{
	"info": {
		"_postman_id": "xplor-backend-collection",
		"name": "Xplor Backend API",
		"description": "Collection to test Authentication, Assets, and Health APIs for Xplor Backend.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Health",
			"item": [
				{
					"name": "Health Check",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{url}}/health/",
							"host": [
								"{{url}}"
							],
							"path": [
								"health",
							""
						]
						}
					},
					"response": []
				},
				{
					"name": "Root",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{url}}/",
							"host": [
								"{{url}}"
							],
							"path": [
								""
						]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "Auth",
			"item": [
				{
					"name": "1. Register",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Assuming the response might contain an OTP for debugging purposes, though mostly it is email sent.",
									"// Check console or logs for OTP"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"{{email}}\",\n    \"password\": \"{{password}}\",\n    \"full_name\": \"Test User\"\n}"
						},
						"url": {
							"raw": "{{url}}/auth/register",
							"host": [
								"{{url}}"
							],
							"path": [
								"auth",
							"register"
						]
						}
					},
					"response": []
				},
				{
					"name": "2. Verify Email",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"{{email}}\",\n    \"otp\": \"{{otp}}\"\n}"
						},
						"url": {
							"raw": "{{url}}/auth/verify-email",
							"host": [
								"{{url}}"
							],
							"path": [
								"auth",
							"verify-email"
						]
						},
						"description": "Replace {{otp}} variable or body value with the OTP received in console/email."
					},
					"response": []
				},
				{
					"name": "3. Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.access_token) {",
									"    pm.collectionVariables.set(\"jwt_token\", jsonData.access_token);",
									"    console.log(\"Token set successfully\");",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/x-www-form-urlencoded"
							}
						],
						"body": {
							"mode": "urlencoded",
							"urlencoded": [
								{
									"key": "username",
									"value": "{{email}}",
									"type": "text"
								},
								{
									"key": "password",
									"value": "{{password}}",
									"type": "text"
								}
							]
						},
						"url": {
							"raw": "{{url}}/auth/login",
							"host": [
								"{{url}}"
							],
							"path": [
								"auth",
							"login"
						]
						}
					},
					"response": []
				},
				{
					"name": "4. Get Current User (Me)",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{jwt_token}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{url}}/auth/me",
							"host": [
								"{{url}}"
							],
							"path": [
								"auth",
							"me"
						]
						}
					},
					"response": []
				},
				{
					"name": "5. Forgot Password",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"{{email}}\"\n}"
						},
						"url": {
							"raw": "{{url}}/auth/forgot-password",
							"host": [
								"{{url}}"
							],
							"path": [
								"auth",
							"forgot-password"
						]
						}
					},
					"response": []
				},
				{
					"name": "6. Reset Password",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"{{email}}\",\n    \"otp\": \"{{otp}}\",\n    \"new_password\": \"newpassword123\"\n}"
						},
						"url": {
							"raw": "{{url}}/auth/reset-password",
							"host": [
								"{{url}}"
							],
							"path": [
								"auth",
							"reset-password"
						]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "Assets",
			"item": [
				{
					"name": "Upload Asset",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.file_id) {",
									"    pm.collectionVariables.set(\"file_id\", jsonData.file_id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "file",
									"type": "file",
									"src": []
								},
								{
									"key": "name",
									"value": "Test Asset 1",
									"type": "text"
								},
								{
									"key": "thumbnail",
									"type": "file",
									"src": [],
									"disabled": true
								}
							]
						},
						"url": {
							"raw": "{{url}}/assets/upload/",
							"host": [
								"{{url}}"
							],
							"path": [
								"assets",
							"upload",
							""
						]
						}
					},
					"response": []
				},
				{
					"name": "List Assets",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{url}}/assets/",
							"host": [
								"{{url}}"
							],
							"path": [
								"assets",
							""
						]
						}
					},
					"response": []
				},
				{
					"name": "Get Asset by ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{url}}/assets/{{file_id}}",
							"host": [
								"{{url}}"
							],
							"path": [
								"assets",
							"{{file_id}}"
						]
						}
					},
					"response": []
				},
				{
					"name": "Delete Asset",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{url}}/assets/{{file_id}}",
							"host": [
								"{{url}}"
							],
							"path": [
								"assets",
							"{{file_id}}"
						]
						}
					},
					"response": []
				}
			]
		}
	],
	"variable": [
		{
			"key": "url",
			"value": "http://127.0.0.1:8000",
			"type": "string"
		},
		{
			"key": "email",
			"value": "test@example.com",
			"type": "string"
		},
		{
			"key": "password",
			"value": "password123",
			"type": "string"
		},
		{
			"key": "otp",
			"value": "123456",
			"type": "string"
		},
		{
			"key": "jwt_token",
			"value": "",
